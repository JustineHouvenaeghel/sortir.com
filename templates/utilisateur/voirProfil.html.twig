{%  extends 'base.html.twig' %}

{% block body %}
    <h1>{{ profil.username }}</h1>
    <div class="d-flex justify-content-between">
        {% if profil.photo != null %}
            <div class="col-4">
                <img class="img" src="{{ asset('uploads/photo_participants/' ~ profil.photo) }}" alt="{{ profil.username }}"/>
            </div>
        {% endif%}
        <div class="col-6">
            <p class="row">Prénom : {{ profil.prenom }}</p>
            <p class="row">Nom : {{ profil.nom }}</p>
            <p class="row">Téléphone : {{ profil.telephone }}</p>
            <p class="row">Email : {{ profil.mail }}</p>
            <p class="row">Campus : {{ profil.campus.nom }}</p>
        </div>
    </div>
    <div class="d-flex justify-content-center">

    {% if profil.username == app.user.username %}
        <button class="btn btn-warning"><a href="{{ path('app_participant_modifier_profil', {id: profil.id}) }}">Modifier mon profil</a></button>
    {% endif %}
    </div>
{% endblock %}